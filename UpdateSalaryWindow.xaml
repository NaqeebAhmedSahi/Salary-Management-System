<Window x:Class="Salary_Management.UpdateSalaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Salary" Height="300" Width="400">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3a6186" Offset="0.0" />
            <GradientStop Color="#89253e" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock Text="Select Employee:" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="EmployeeComboBox" Margin="10,30,10,0" VerticalAlignment="Top" SelectionChanged="EmployeeComboBox_SelectionChanged"/>

        <TextBlock Text="Previous Salary:" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PreviousSalaryTextBox" Margin="10,90,10,0" VerticalAlignment="Top" IsReadOnly="True"/>

        <TextBlock Text="New Salary:" Margin="10,130,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NewSalaryTextBox" Margin="10,150,10,0" VerticalAlignment="Top"/>

        <Button Content="Update Salary" Margin="10,200,10,0" VerticalAlignment="Top" Click="UpdateSalary_Click"/>
    </Grid>
</Window>
